<div id="notice" class="bg-green-100 text-green-700 p-4 mb-4"><%= notice %></div>

<div class="container mx-auto">
  <p>
    <strong class="text-gray-700">Name:</strong>
    <%= @customer.name %>
  </p>

  <p>
    <strong class="text-gray-700">Email:</strong>
    <%= @customer.email %>
  </p>

  <p>
    <strong class="text-gray-700">Phone:</strong>
    <%= @customer.phone %>
  </p>

  <p>
    <strong class="text-gray-700">Address:</strong>
    <%= @customer.address %>
  </p>

  <p>
    <strong class="text-gray-700">User:</strong>
    <%= @customer.user_id %>
  </p>

  <div class="mt-4">
    <%= link_to 'Edit', edit_customer_path(@customer), class: 'text-blue-500 hover:text-blue-700 mr-4' %>
    <%= link_to 'Back', customers_path, class: 'text-gray-500 hover:text-gray-700' %>
  </div>
</div>
